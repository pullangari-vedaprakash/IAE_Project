<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Tails - Product Management</title>
    <link href="/ADMIN/admin-products.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h1>Happy Tails</h1>
            </div>
            <ul class="nav-menu">
                <li class="nav-item"><a href="/admin-dashboard" class="nav-link"><span>Dashboard</span></a></li>
                <li class="nav-item"><a href="/admin-user" class="nav-link"><span>Users</span></a></li>
                <li class="nav-item"><a href="/admin-shop-manager" class="nav-link"><span>Shop Managers</span></a></li>
                <li class="nav-item"><a href="/admin-events" class="nav-link"><span>Event Managers</span></a></li>
                <li class="nav-item"><a href="/admin-products" class="nav-link active"><span>Products</span></a></li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Product Management</h2>
                <div class="user-info">
                    <div class="avatar">A</div>
                    <span>Admin User</span>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-container" id="statsContainer">
                <div class="stat-card">
                    <h3>Total Products</h3>
                    <div class="number" id="totalProducts">Loading...</div>
                    <div class="change" id="monthlyChange">Loading...</div>
                </div>
                <div class="stat-card">
                    <h3>In Stock</h3>
                    <div class="number" id="inStock">Loading...</div>
                    <div class="change" id="inStockChange">Loading...</div>
                </div>
                <div class="stat-card">
                    <h3>Low Stock</h3>
                    <div class="number" id="lowStock">Loading...</div>
                    <div class="change" id="lowStockChange">Loading...</div>
                </div>
                <div class="stat-card">
                    <h3>Out of Stock</h3>
                    <div class="number" id="outOfStock">Loading...</div>
                    <div class="change" id="outOfStockChange">Loading...</div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" id="productSearchInput" placeholder="Search products by name or ID...">
                </div>
                <button class="filter-btn" id="filterBtn">Filter Options</button>
            </div>

            <!-- Product Table -->
            <div class="product-table-container">
                <div class="table-header">
                    <h3>Product List</h3>
                    <button id="addProductBtn" class="add-product-btn" onclick="window.location.href='/admin-add-product'">+ Add Product</button>
                </div>
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Added Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        <tr>
                            <td colspan="7">Loading products...</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="pagination" id="pagination">
                    <!-- Populated dynamically by JavaScript -->
                </div>
            </div>
        </main>
    </div>
    <script src="/ADMIN/admin-products.js"></script>
</body>
</html>