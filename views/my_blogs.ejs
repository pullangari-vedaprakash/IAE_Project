    <div class="container">
        <div class="myblogs">
            <h1 class="blog_heading">My Blogs</h1>
            <div class="post">
                <div class="main_image_wrapper">
                    <div class="main_image">
                        <img src="/images/blog_image1.jpg" alt="dog">
                    </div>
                </div>
                <div class="content">
                    <div class="header_div">
                        <div class="acoount">
                        
                            <img src="/icons/profile-circle-svgrepo-com (1).svg" alt="profile" height="50">
                            <div class="details">
