        <div class="uploadBlog">
            <form id="blogForm">
                <div class="form_group">
                    <label>Upload Image (16:9 recommended):</label>
                    <div class="photo_container">
                        <div class="add_photo">
                            <img class="add_camera" src="/icons/camera-add-photo-svgrepo-com.svg" alt="add photo" height="50" />
                            <p class="hover_text">Upload Photo</p>
                            <a href="javascript:void(0)" class="remove_photo_btn">&times;</a>
                            <input class="file_upload_input" type="file" id="blog_image" accept="image/*" required>
                        </div>
                    </div>
                </div>
            
                <label>Title:</label>
                <input type="text" id="title" required><br><br>
            
                <label>Content:</label>
                <textarea id="content" rows="10" required></textarea><br><br>
            
                <button type="submit">Publish</button>
            </form>
        </div>
    </div>
    

    <script>
        document.getElementById('menuIcon').addEventListener('click', function() {
            document.getElementById('sideNavbar').classList.toggle('open');
        });
    
        document.getElementById('closeBtn').addEventListener('click', function() {
            document.getElementById('sideNavbar').classList.remove('open');
        });
    
        document.getElementById('sidebar_btn').addEventListener('click', function() {
            document.querySelector('.mobile_sidebar').classList.toggle('open');
        });
    
        document.querySelector('#mobile_sidebar_close-btn').addEventListener('click', function() {
            document.querySelector('.mobile_sidebar').classList.remove('open');
        });



        document.addEventListener("DOMContentLoaded", function () {
            const uploadSlot = document.querySelector(".add_photo");
            const removePhotoBtn = document.querySelector(".remove_photo_btn");
            const hiddenInput = document.querySelector(".file_upload_input");

            uploadSlot.addEventListener("click", () => {
                hiddenInput.click();
            });
        
            hiddenInput.addEventListener("change", () => {
                const image = hiddenInput.files[0];
                if (image) {
                    const reader = new FileReader();
                    reader.onload = () => {
                        uploadSlot.classList.add("uploaded");
                        removePhotoBtn.style.display = "block";
                    
                        let img = uploadSlot.querySelector('.preview');
                        if (!img) {
                            img = document.createElement('img');
                            img.classList.add('preview');
                            uploadSlot.appendChild(img);
                        }
                        img.src = reader.result;
                        img.style.width = "100%";
                        img.style.height = "100%";
                        img.style.objectFit = "cover";
                    };
                    reader.readAsDataURL(image);
                }
            });
        
            removePhotoBtn.addEventListener("click", function (event) {
                event.stopPropagation();
            
                uploadSlot.classList.remove("uploaded");
                removePhotoBtn.style.display = "none";
            
                const previewImg = uploadSlot.querySelector(".preview");
                if (previewImg) uploadSlot.removeChild(previewImg);
            
                hiddenInput.value = "";
            });
        });


        document.getElementById("content").addEventListener("keydown", function(event) {
            if (event.key === "Tab") {
                event.preventDefault();  
                let start = this.selectionStart;
                let end = this.selectionEnd;
            
                this.value = this.value.substring(0, start) + "\t" + this.value.substring(end);
                this.selectionStart = this.selectionEnd = start + 1; 
            }
        });
    </script>
