<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Tails - User Management</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link href="/ADMIN/admin-user.css" rel="stylesheet">
</head> 
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h1>Happy Tails</h1>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin-dashboard" class="nav-link">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-user" class="nav-link active">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-shop-manager" class="nav-link">
                        <span>Shop Managers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-events" class="nav-link">
                        <span>Event Managers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-products" class="nav-link">
                        <span>Products</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>User Management</h2>
                <div class="user-info">
                    <div class="avatar">A</div>
                    <span>Admin User</span>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-container">
                <div class="stat-card">
                    <h3>Total Users</h3>
                    <div class="number">1,452</div>
                    <div class="change">+12% from last month</div>
                </div>
                <div class="stat-card">
                    <h3>Monthly Users</h3>
                    <div class="number">168</div>
                    <div class="change">+8% from previous month</div>
                </div>
                <div class="stat-card">
                    <h3>Weekly Users</h3>
                    <div class="number">43</div>
                    <div class="change">+15% from last week</div>
                </div>
                <div class="stat-card">
                    <h3>Today's Users</h3>
                    <div class="number">7</div>
                    <div class="change">+3 from yesterday</div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" id="userSearchInput" placeholder="Search users by name or email...">
                </div>
                <button class="filter-btn" id="filterBtn">Filter Options</button>
            </div>

            <!-- User Table -->
            <div class="user-table-container">
                <div class="table-header">
                    <h3>User List</h3>
                </div>
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Joined Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        <!-- User data will be inserted here by JavaScript -->
                    </tbody>
                </table>
                
                <!-- Pagination -->
                <div class="pagination">
                    <button class="page-btn active" onclick="changePage(1)">1</button>
                    <button class="page-btn " onclick="changePage(2)">2</button>
                    <button class="page-btn" onclick="changePage(3)">3</button>
                    <button class="page-btn" onclick="changePage(4)">Next</button>
                </div>
            </div>
        </main>
    </div>
    <script src="/ADMIN/admin-user.js"></script>
</body>
</html> 