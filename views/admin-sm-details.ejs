<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Tails - Shop Manager Details</title>
    <link href="/ADMIN/admin-sm-details.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="header">
            <button class="back-button" onclick="goBack()">‚Üê Back to Shop Managers</button>
            <div class="action-buttons">
                <button class="edit-btn" onclick="showEditForm()">Edit Shop Manager</button>
                <button class="delete-btn" onclick="deleteShopManager()">Delete Shop Manager</button>
            </div>
        </div>

        <div id="managerView">
            <div class="manager-profile">
                <div class="manager-avatar" id="managerAvatar"></div>
                <h2 class="manager-name" id="managerName">Loading...</h2>
                <p class="manager-email" id="managerEmail">Loading...</p>
                <div style="clear: both;"></div>
            </div>

            <div class="detail-section">
                <h3 class="section-title">Basic Information</h3>
                <table class="details-table">
                    <tr>
                        <td>Shop Manager ID:</td>
                        <td id="managerId">Loading...</td>
                    </tr>
                    <tr>
                        <td>Store Name:</td>
                        <td id="storeName">Loading...</td>
                    </tr>
                    <tr>
                        <td>Store Location:</td>
                        <td id="storeLocation">Loading...</td>
                    </tr>
                    <tr>
                        <td>Joined Date:</td>
                        <td id="joinedDate">Loading...</td>
                    </tr>
                </table>
            </div>

            <div class="detail-section">
                <h3 class="section-title">Revenue Metrics</h3>
                <div class="revenue-cards">
                    <div class="revenue-card">
                        <div class="revenue-value" id="todayRevenue">$0.00</div>
                        <div class="revenue-label">Today's Revenue</div>
                    </div>
                    <div class="revenue-card">
                        <div class="revenue-value" id="weeklyRevenue">$0.00</div>
                        <div class="revenue-label">Weekly Revenue</div>
                    </div>
                    <div class="revenue-card">
                        <div class="revenue-value" id="monthlyRevenue">$0.00</div>
                        <div class="revenue-label">Monthly Revenue</div>
                    </div>
                    <div class="revenue-card">
                        <div class="revenue-value" id="quarterlyRevenue">$0.00</div>
                        <div class="revenue-label">Quarterly Revenue</div>
                    </div>
                </div>

                <table class="revenue-table">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Total Sales</th>
                            <th>Orders</th>
                            <th>Avg Order Value</th>
                        </tr>
                    </thead>
                    <tbody id="revenueTableBody">
                        <tr>
                            <td colspan="4">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="detail-section">
                <h3 class="section-title">Product Management</h3>
                <table class="products-table">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody id="productsTableBody">
                        <tr>
                            <td colspan="5">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="detail-section">
                <h3 class="section-title">Top Customers</h3>
                <table class="customers-table">
                    <thead>
                        <tr>
                            <th>Customer ID</th>
                            <th>Name</th>
                            <th>Total Orders</th>
                            <th>Total Spent</th>
                            <th>Last Purchase</th>
                        </tr>
                    </thead>
                    <tbody id="customersTableBody">
                        <tr>
                            <td colspan="5">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Edit Form -->
        <div id="editForm" class="edit-form" style="display: none;">
            <div class="detail-section">
                <h3 class="section-title">Edit Shop Manager Information</h3>
                <form id="managerEditForm" novalidate>
                    <div class="form-group">
                        <label for="editName">Name:</label>
                        <input type="text" id="editName" required minlength="2" maxlength="50">
                        <span class="error-message" id="nameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editEmail">Email:</label>
                        <input type="email" id="editEmail" disabled>
                        <span class="error-message" id="emailError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editStoreName">Store Name:</label>
                        <input type="text" id="editStoreName" required minlength="2" maxlength="100">
                        <span class="error-message" id="storeNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editStoreLocation">Store Location:</label>
                        <input type="text" id="editStoreLocation" minlength="5">
                        <span class="error-message" id="storeLocationError"></span>
                    </div>
                    <button type="submit" class="save-btn">Save Changes</button>
                    <button type="button" class="cancel-btn" onclick="cancelEdit()">Cancel</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/ADMIN/admin-sm-details.js"></script>
</body>
</html>