<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Tails - Event Manager Management</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link href="/ADMIN/admin-events.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h1>Happy Tails</h1>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin-dashboard" class="nav-link">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-user" class="nav-link">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-shop-manager" class="nav-link">
                        <span>Shop Managers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-events" class="nav-link active">
                        <span>Event Managers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin-products" class="nav-link">
                        <span>Products</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Event Manager Management</h2>
                <div class="user-info">
                    <div class="avatar">A</div>
                    <span>Admin User</span>
                </div>
            </div>

            <!-- Stats Cards -->
            
                <!-- Stats Cards -->
<div class="stats-container">
    <div class="stat-card">
        <h3>Total Event Managers</h3>
        <div class="number"></div> <!-- Remove hardcoded 84 -->
        <div class="change"></div> <!-- Remove hardcoded +7% -->
    </div>
    <div class="stat-card">
        <h3>Total Revenue Generated</h3>
        <div class="number"></div> <!-- Remove hardcoded $98,750 -->
        <div class="change"></div> <!-- Remove hardcoded +12% -->
    </div>
    <div class="stat-card">
        <h3>Total Events</h3>
        <div class="number"></div> <!-- Remove hardcoded 942 -->
        <div class="change"></div> <!-- Remove hardcoded +8% -->
    </div>
    <div class="stat-card">
        <h3>Today's Events</h3>
        <div class="number"></div> <!-- Remove hardcoded 23 -->
        <div class="change"></div> <!-- Remove hardcoded +5 -->
    </div>
</div>
            

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" id="eventManagerSearchInput" placeholder="Search event managers by name or event...">
                </div>
                <button class="filter-btn" id="filterBtn">Filter Options</button>
            </div>

            <!-- Event Manager Table -->
            <div class="manager-table-container">
                <div class="table-header">
                    <h3>Event Manager List</h3>
                </div>
                <table class="manager-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Organization</th>
                            <th>Email</th>
                            <th>Joined Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="eventManagerTableBody">
                        <!-- Event Manager data will be inserted here by JavaScript -->
                    </tbody>
                </table>
                
                <!-- Pagination -->
                <div class="pagination">
                    <button class="page-btn active" onclick="changePage(1)">1</button>
                    <button class="page-btn" onclick="changePage(2)">2</button>
                    <button class="page-btn" onclick="changePage(3)">3</button>
                    <button class="page-btn" onclick="changePage(4)">Next</button>
                </div>
            </div>
        </main>
    </div>
    <script src="/ADMIN/admin-events.js"></script>
</body>
</html>