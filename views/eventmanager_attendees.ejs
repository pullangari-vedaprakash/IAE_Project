<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Manager - Attendees</title>
    <link rel="stylesheet" href="/Events/eventmanager_attendees.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <header>
            <a href="/home" class="badge">Happy Tails</a>
            <div class="menu">
                <a href="/eventmanager_profile" class="nav-link" data-page="Profile">Profile</a>
                <a href="/logout" class="nav-link" data-page="Logout">Logout</a>
            </div>
        </header>
    </div>

    <div class="dashboard-container">
        <div class="sidebar">
            <h2>Dashboard</h2>
            <ul>
                <li><a href="/eventmanager_dashboard" class="nav-link" data-page="Home">Home</a></li>
                <li><a href="/eventmanager_events" class="nav-link" data-page="Events">Events</a></li>
                <li><a href="/eventmanager_attendees" class="nav-link active" data-page="Attendees">Attendees</a></li>
                <li><a href="/eventmanager_profile" class="nav-link" data-page="Profile">Profile</a></li>
                <li><a href="/eventmanager_analytics" class="nav-link" data-page="Analytics">Analytics</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="welcome-section">
                <h1>Attendees</h1>
            </div>
            <!-- Past & Ongoing Attendees -->
            <div class="section">
                <h2 style="margin-bottom: 10px;">All Registered Attendees (Past & Ongoing)</h2>
                <% if (typeof pastOngoingAttendees !== 'undefined' && pastOngoingAttendees.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Event</th>
                                <th>Date</th>
                                <th>Registration Date</th>
                                <th>Total Attendees</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pastOngoingAttendees.forEach(attendee => { %>
                                <% if (attendee.name) { %>
                                    <tr>
                                        <td><%= attendee.name %></td>
                                        <td><%= attendee.email %></td>
                                        <td><%= attendee.event_name %></td>
                                        <td><%= attendee.formattedDate %></td>
                                        <td><%= attendee.formattedRegDate || 'N/A' %></td>
                                        <td><%= attendee.totalAttendees || 0 %></td>
                                    </tr>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No past or ongoing attendees found.</p>
                <% } %>
            </div>

            <!-- Upcoming Attendees -->
            <div class="section">
                <h2 style="margin-bottom: 10px;">Upcoming Events Attendees</h2>
                <% if (typeof upcomingAttendees !== 'undefined' && upcomingAttendees.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Event</th>
                                <th>Date</th>
                                <th>Registration Date</th>
                                <th>Registered Seats</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% upcomingAttendees.forEach(attendee => { %>
                                <% if (attendee.name) { %>
                                    <tr>
                                        <td><%= attendee.name %></td>
                                        <td><%= attendee.email %></td>
                                        <td><%= attendee.event_name %></td>
                                        <td><%= attendee.formattedDate %></td>
                                        <td><%= attendee.formattedRegDate || 'N/A' %></td>
                                        <td><%= attendee.seats || 0 %></td>
                                    </tr>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No upcoming event attendees found.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Page loaded:', window.location.pathname);
        });
    </script>
</body>
</html>